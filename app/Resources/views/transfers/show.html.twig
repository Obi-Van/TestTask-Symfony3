{% extends 'base.html.twig' %}

{% block body %}


{% for flash_message in app.session.flashBag.get('notice') %}
    <div class="flash-notice">
        {{ flash_message }}
    </div>
{% endfor %}

	<h2 class="page-header">Report month: <b>{{ month }}</b></h2>

<table class="table table-condensed">
<thead>
<tr>
<th>#</th> <th>Company's name</th> <th>Quota</th> <th>Use</th>
</tr>
</thead>
<tbody>
{% for company in companies %}
<tr>
<th scope="row">{{company.id}}</th> 
<td>{{company.name}}</td>
<td><b>{{company.quota}}</b> TB</td>
<td><b>{{company.use|round}}</b> TB</td>
</tr>
{% endfor %}
</tbody>
</table>


{% endblock %}